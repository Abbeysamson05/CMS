<section class="profile-section px-3 py-5 bg-white">

    <div class="container">
        <div class="course-objective bg-white d-flex justify-content-between p-3 align-items-center">
            <p class="fs-3 fw-bold mb-0" style="display: flex; align-items: center;">Course content</p>
        </div>
        @if (Model.course != null)
        {
            @foreach (var lesson in Model.course.Lessons)
            {
                <div class="course-tile my-4 px-3">
                    <h3 class="fw-bold">@lesson.Weeks.ToString()</h3>
                </div>
                <div class="gray-outline br-8">
                    <div class="accordion" id="accordionExample">

                        <div class="accordion-item">
                            <h2 class="accordion-header" id="acc-head-@lesson.Id">
                                <button style="margin: 0;" class="accordion-button py-3" type="button" data-bs-toggle="collapse" data-bs-target="#collapse-@lesson.Id" aria-expanded="false" aria-controls="collapse-@lesson.Id">
                                    <div class="accordion-header-content d-flex flex-column w-100">
                                        <p class="accordion-header-title mb-1"><img src="~/images/Succeess.png" width="20px" class="me-2" />@lesson.Topic</p>
                                        <div class="accordion-header-info d-flex flex-row justify-content-between">
                                            <p class="accordion-header-subtitle fw-bold ms-4 me-2">1 topics</p>
                                            <span class="accordion-button-expand"></span>
                                        </div>
                                    </div>
                                </button>
                            </h2>
                        </div>

                        <div id="collapse-@lesson.Id" class="accordion-collapse collapse" aria-labelledby="acc-head-@lesson.Id" data-bs-parent="#accordionExample">
                            <div class="accordion-body p-0">
                                <div class="course-content-list">
                                    <div class="br-8 p-3 d-flex flex-row justify-content-between align-items-center fw-bold">
                                        <p class="mb-0"><img src="~/images/Icon2.jpg" class="me-2" />Lesson Content</p>
                                        <div class="d-flex flex-row justify-content-between align-content-center">
                                            <p class="mb-0 px-2 border-end border-bottom-5">
                                                @if (Model.course.IsCompleted == true)
                                                {
                                                    <span>100% Complete</span>
                                                }
                                                0% Complete
                                            </p>
                                            <p class="mb-0 px-2">0/2</p>
                                        </div>
                                    </div>

                                    <div class="p-3 list-group-item">
                                        <a  href="/classroom/learningcontent/@Model.course.Id/@lesson.Id"><img src="~/images/Succeess.png" width="20px" class="me-2" />@lesson.Topic</a>
                                </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
                <br />
            }
        }
</section>

